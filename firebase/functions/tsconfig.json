{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"baseUrl": "./",
		"paths": {
			"~/api": ["./src/lib/index"]
		}
	},
	"compileOnSave": true,
	"include": ["src"]
}
